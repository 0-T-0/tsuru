# bash completion for "tsuru" command
# Based on juju's bash completion

shopt -s progcomp

_tsuru() {
    local cur cmds cmdIdx cmd i
    local curOpt optEnums
    local IFS=$' \n'

    COMPREPLY=()
    cur=${COMP_WORDS[COMP_CWORD]}
    cmds='app-create app-grant app-list app-remove app-revoke bind env-get env-set env-unset help key-add key-remove log login logout restart run service-add service-doc service-info service-list service-remove service-status target team-create team-list team-user-add team-user-remove unbind user-create'

    # do ordinary expansion if we are anywhere after a -- argument
    for ((i = 1; i < COMP_CWORD; ++i)); do
        [[ ${COMP_WORDS[i]} == "--" ]] && return 0
    done

    # find the command; it's the first word not starting in -
    cmd=
    for ((cmdIdx = 1; cmdIdx < ${#COMP_WORDS[@]}; ++cmdIdx)); do
        if [[ ${COMP_WORDS[cmdIdx]} != -* ]]; then
            cmd=${COMP_WORDS[cmdIdx]}
            break
        fi
    done

    # complete command name if we are not already past the command
    if [[ $COMP_CWORD -le cmdIdx ]]; then
        COMPREPLY=( $( compgen -W "$cmds" -- "$cur" ) )
        return 0
    fi

    return 0
}

complete -F _tsuru -o default tsuru
